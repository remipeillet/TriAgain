<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hytsigu.triagain.ChoixActivity">

    <com.example.hytsigu.triagain.CustomButtonView
        android:id="@+id/button5Questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        android:background="@android:color/transparent"
        android:text="5 Questions"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:font="@string/fontCabinSketch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.hytsigu.triagain.CustomButtonView
        android:id="@+id/button10Questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:text="10 Questions"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:font="@string/fontCabinSketch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5Questions" />

    <com.example.hytsigu.triagain.CustomButtonView
        android:id="@+id/button15Questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:text="15 Questions"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:font="@string/fontCabinSketch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button10Questions" />

</android.support.constraint.ConstraintLayout>
